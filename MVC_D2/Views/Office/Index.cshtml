@model List<Office>
@{
    ViewData["Title"] = "Index";
    int i = 1;
}
<a href="/office/ADDform" class="btn btn-info">ADD</a>

<table class="table">
    <thead>
        <tr class="table-warning">
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            
            <th scope="col">Controls</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-warning">
                <th scope="row">@(i++)</th>

                <td>@item.Name</td>
                
                <td>@item.Location</td>
                <td>
                    <a href="/office/Delete/@item.Id">Delete</a>
                    -
                    <a href="/office/Edit/@item.Id">Edit</a>
                    
                </td>

            </tr>
        }

    </tbody>
</table>


