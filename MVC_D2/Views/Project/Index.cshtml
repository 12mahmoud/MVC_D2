@model List<Project>
@{
    ViewData["Title"] = "Index";
    int i = 1;
}

<h1>Index</h1>

<a asp-controller="project" asp-action="Add" class="btn btn-info">ADD</a>

<table class="table">
    <thead>
        <tr class="table-warning">
            <th  scope="col">#</th>
            <th scope="col" >Name</th>
            <th scope="col">Description</th>
            
            <th scope="col">Controls</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-warning">
                <th scope="row">@(i++)</th>

                <td>@item.Name</td>
                <td>@item.Description</td>
                
                <td>
                    <a asp-controller="project" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    -
                    <a asp-controller="project" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    -
                    <a asp-controller="project" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    
                </td>

            </tr>
        }

    </tbody>
</table>




