@model Employee
@{
    ViewData["Title"] = "EditForm";
}

<h1>EditForm</h1>
<form action="/employee/EditDB" method="post">
<input type="number" id="Id" name="Id" value="@Model.Id" hidden />
<div class="mb-3">
    <label for="Name" class="form-label">Name</label>
    <input type="text" class="form-control" id="Name" aria-describedby="Name" name="Name" value="@Model.Name">
</div>
<div class="mb-3">
        <label for="Age" class="form-label">Age</label>
        <input type="number" class="form-control" id="Age" aria-describedby="Description" name="Age" value="@Model.Age">
</div>
<div class="mb-3">
        <label for="Salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="Salary" name="Salary" value="@Model.Salary">
</div>
<div class="mb-3">
        <label for="Email" class="form-label"> Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email">
</div>
<div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password">
</div>

    <div class="mb-3">
        <label for="Off_Id" class="form-label">Office</label>
        
        <select class="form-select" aria-label="Default select example" id="Off_Id" name="Off_Id">
            
            @foreach (var item in ViewBag.offices)
            {
                @if (Model.Off_Id ==item.Id){
                    <option value="@item.Id" selected> @item.Name  </option>
                }
                else
                {
                    <option value="@item.Id" > @item.Name  </option>
                }
            }
        </select>
    </div>
<button type="submit" class="btn btn-primary">Submit</button>
</form>
