@model Employee
@{
    ViewData["Title"] = "EditForm";
}

<h1>EditForm</h1>
<form action="/employee/EditDB" method="post">
<input type="number" id="Id" name="Id" value="@Model.Id" hidden />
<div class="mb-3">
    <label for="Name" class="form-label">Name</label>
    <input type="text" class="form-control" id="Name" aria-describedby="Name" name="Name" value="@Model.Name">
</div>
<div class="mb-3">
        <label for="Age" class="form-label">Age</label>
        <input type="number" class="form-control" id="Age" aria-describedby="Description" name="Age" value="@Model.Age">
</div>
<div class="mb-3">
        <label for="Salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="Salary" name="Salary" value="@Model.Salary">
</div>
<div class="mb-3">
        <label for="Email" class="form-label"> Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email">
</div>
<div class="mb-3">
        <label for="Password" class="form-label">Passwordl</label>
        <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password">
</div>
<button type="submit" class="btn btn-primary">Submit</button>
</form>
